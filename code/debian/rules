#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1


DEB_PYTHON_SYSTEM=pysupport


include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

build/tablet-pressure-applet::
	pod2man --section=6 --release=$(VERSION) --center "" debian/tablet-pressure-applet.pod > tablet-pressure-applet.6

cleanbuilddir/tablet-pressure-applet::
	rm -f tablet-pressure-applet.6

DEB_INSTALL_MANPAGES_tablet-pressure-applet = tablet-pressure-applet.6




build/tablet-config::
	pod2man --section=6 --release=$(VERSION) --center "" debian/tablet-config.pod > tablet-config.6

cleanbuilddir/tablet-config::
	rm -f tablet-config.6

DEB_INSTALL_MANPAGES_tablet-config = tablet-config.6

